<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_disclaimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text="Please wait while we create a new staff account for your organization."
        style="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.CubeGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"
        app:SpinKit_Color="@color/md_theme_primary"
        android:layout_centerInParent="true"
        app:layout_constraintTop_toBottomOf="@id/text_disclaimer"
        app:layout_constraintStart_toStartOf="@id/text_disclaimer"
        app:layout_constraintEnd_toEndOf="@id/text_disclaimer"/>
</androidx.constraintlayout.widget.ConstraintLayout>